@page
@model Telamingo.AdminPanel.Pages.JobsModel
@{
}
<main class="main-content position-relative max-height-vh-100 h-100 mt-1 border-radius-lg ">
<!-- Navbar -->
<nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
    <div class="container-fluid py-1 px-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Jobs</li>
        </ol>
        <h6 class="font-weight-bolder mb-0">Jobs</h6>
    </nav>
    <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
        <div class="ms-md-auto pe-md-3 d-flex align-items-center">
        <div class="input-group">
            <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
            <input type="text" class="form-control" placeholder="Type here...">
        </div>
        </div>
        <ul class="navbar-nav  justify-content-end">
        <li class="nav-item d-flex align-items-center">
            <a href="javascript:;" class="nav-link text-body font-weight-bold px-0">
            <i class="fa fa-user me-sm-1"></i>
            <span class="d-sm-inline d-none">Sign In</span>
            </a>
        </li>
        <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
            <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
            <div class="sidenav-toggler-inner">
                <i class="sidenav-toggler-line"></i>
                <i class="sidenav-toggler-line"></i>
                <i class="sidenav-toggler-line"></i>
            </div>
            </a>
        </li>
        <li class="nav-item px-3 d-flex align-items-center">
            <a href="javascript:;" class="nav-link text-body p-0">
            <i class="fa fa-cog fixed-plugin-button-nav cursor-pointer"></i>
            </a>
        </li>
        <li class="nav-item dropdown pe-2 d-flex align-items-center">
            <a href="javascript:;" class="nav-link text-body p-0" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-bell cursor-pointer"></i>
            </a>
        </li>
        </ul>
    </div>
    </div>
</nav>
<!-- End Navbar -->
<div class="container-fluid py-4">
    <div class="row">
    <div class="col-md-7 mt-4">
        <div class="card">
        <div class="card-body pt-4 p-3">
            <ul class="list-group">
                <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
                    <form asp-page-handler="post" method="post">
                    <div class="row">
                        <div class="col-8" style="width:100% !important">
                            <div class="numbers">
                                <h5 class="font-weight-bolder mb-0">
                                    Add new Job:
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        <div class="input-group">
                            <span class="input-group-text text-body" style="padding: 3px 10px 3px 3px;">
                                <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0" 
                                style="margin: 0 !important; background-image: linear-gradient(310deg, #cb0c9f 0%, #cb0c9f 100%);">
                                    <span class="text-success text-sm font-weight-bolder">+</span>
                                </button>
                            </span>
                            <input type="text" class="form-control" name="job.Name" placeholder="Type here...">
                        </div>
                    </div>
                    </form>
                </li>
            @{
                foreach (var item in @Model.Result)
                {
                    <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
                    <div class="d-flex flex-column">
                        <h6 class="mb-3 text-sm">@item.Name</h6>
                        <span class="mb-2 text-xs"><span class="text-dark font-weight-bold ms-sm-2">
                            <a href="./Country?Id=@item.Id">View Details</a>
                        </span></span>
                    </div>
                    <div class="ms-auto text-end">
                        <a class="btn btn-link text-danger text-gradient px-3 mb-0" href="./DeleteJob?Id=@item.Id"><i class="far fa-trash-alt me-2"></i>Delete</a>
                        <a class="btn btn-link text-dark px-3 mb-0" href="javascript:;"><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Edit</a>
                    </div>
                    </li>
                }
            }
            </ul>
        </div>
        </div>
    </div>
    </div>
</div>
</main>
