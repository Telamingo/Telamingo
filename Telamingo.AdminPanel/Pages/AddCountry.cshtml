    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-md-7 mt-4">
          <div class="card">
            <form asp-page-handler="post" method="post">
            <div class="card-header pb-0 px-3">
              <h6 class="mb-0">CountryName:</h6>
              <input type="text" class="form-control" name="c.CountryName" value="">
            </div>
            <div class="card-body pt-4 p-3">
              <ul class="list-group">
                <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
                  <div class="d-flex flex-column">

                    <hr/>
                    <h6 class="mb-3 text-sm">Cultural</h6>
                    <span class="mb-2 text-xs">CulturalClimate<span class="text-dark font-weight-bold ms-sm-2">
                    </span></span>
                    @{
                        foreach (var item in @Model.Result.Cultural.CulturalClimate)
                        {
                            <span class="mb-2 text-xs">@item.Climate.Name: <span class="text-dark font-weight-bold ms-sm-2">
                            <input type="text" class="form-control" name="c.Cultural.CulturalClimate.Climate.Name" value="" />
                            </span></span>
                        }
                    }
                    <span class="mb-2 text-xs">CulturalWeather<span class="text-dark font-weight-bold ms-sm-2">
                    </span></span>
                    @{
                        foreach (var item in @Model.Result.Cultural.CulturalWeather)
                        {
                            <span class="mb-2 text-xs">@item.Weather.Name: <span class="text-dark font-weight-bold ms-sm-2">
                            <input type="text" class="form-control" name="c.Cultural.CulturalWeather.Weather.Name" value="" />
                            </span></span>
                        }
                    }

                    <hr/>
                    <h6 class="mb-3 text-sm">PhysicalHealt</h6>
                    <span class="mb-2 text-xs">StatusOfTheTreatmentSystemForSpecificDiseases: 
                        <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="c.PhysicalHealth.StatusOfTheTreatmentSystemForSpecificDiseases"
                            value="" />
                        </span>
                    </span>
                        @*<span class="text-dark font-weight-bold ms-sm-2">@Model.Result.PhysicalHealth.StatusOfTheTreatmentSystemForSpecificDiseases
                        </span></span>*@
                    <span class="mb-2 text-xs">DoctorAccess: 
                        <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="c.PhysicalHealth.DoctorAccess"
                            value="" />
                        </span>
                    </span>
                    <span class="mb-2 text-xs">AveragePerCapitaHealthExpenditure: 
                        <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="c.PhysicalHealth.AveragePerCapitaHealthExpenditure"
                            value="" />
                        </span>
                    </span>
                    <span class="mb-2 text-xs">PhysicalHealthDesiredFood<span class="text-dark font-weight-bold ms-sm-2">
                    </span></span>
                    @{
                        foreach (var item in @Model.Result.PhysicalHealth.PhysicalHealthDesiredFood)
                        {
                            <span class="mb-2 text-xs">@item.Food.Name: <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="c.PhysicalHealth.PhysicalHealthDesiredFood.Food.Name" value="" />
                            </span></span>
                        }
                    }

                    <hr/>
                    <h6 class="mb-3 text-sm">MentalHealth</h6>
                    <span class="mb-2 text-xs">AbilityToVisitFamily: 
                        <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="c.MentalHealth.AbilityToVisitFamily"
                            value="" />
                        </span>
                    </span>

                    <span class="mb-2 text-xs">mentalHealthPossibilityOfExacerbationOfTheDisorder<span class="text-dark font-weight-bold ms-sm-2">
                    </span></span>
                    @{
                        foreach (var item in @Model.Result.MentalHealth.mentalHealthPossibilityOfExacerbationOfTheDisorder)
                        {
                            <span class="mb-2 text-xs">@item.Disorder.Name: <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text"
                            name="c.MentalHealth.mentalHealthPossibilityOfExacerbationOfTheDisorder.Disorder.Name"
                            value="" />
                            </span></span>
                        }
                    }

                    <hr/>
                    <h6 class="mb-3 text-sm">Environmental</h6>
                    <span class="mb-2 text-xs">ReligiousIssues: 
                        <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="c.Environmental.ReligiousIssues"
                            value="" />
                        </span>
                    </span>
                    <span class="mb-2 text-xs">Immigration: 
                        <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="c.Environmental.Immigration"
                            value="" />
                        </span>
                    </span>
                    <span class="mb-2 text-xs">SocialRelationshipMatching: 
                        <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="c.Environmental.SocialRelationshipMatching"
                            value="" />
                        </span>
                    </span>

                    <span class="mb-2 text-xs">environmentalLanguageInformation<span class="text-dark font-weight-bold ms-sm-2">
                    </span></span>
                    @{
                        foreach (var item in @Model.Result.Environmental.environmentalLanguageInformation)
                        {
                            <span class="mb-2 text-xs">@item.EnvironmentLanguage.Name: <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" 
                            name="c.Environmental.environmentalLanguageInformation.EnvironmentLanguage.Name" value="" />
                            </span></span>
                        }
                    }

                    <hr/>
                    <h6 class="mb-3 text-sm">Educational</h6>

                    <span class="mb-2 text-xs">Tuition:<span class="text-dark font-weight-bold ms-sm-2">
                    </span></span>
                    @{
                        foreach (var item in @Model.Result.Educational.Tuition)
                        {
                            <span class="mb-2 text-xs">@item.FildOfStudy.Name: <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="c.Educational.Tuition.FildOfStudy.Name" value="" />
                            </span></span>
                        }
                    }
                    <span class="mb-2 text-xs">ProbabilityOfAcceptance:<span class="text-dark font-weight-bold ms-sm-2">
                    </span></span>
                    @{
                        foreach (var item in @Model.Result.Educational.ProbabilityOfAcceptance)
                        {
                            <span class="mb-2 text-xs">@item.FildOfStudy.Name: <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="c.Educational.ProbabilityOfAcceptance.FildOfStudy.Name" value="" />
                            </span></span>
                        }
                    }

                    <hr/>
                    <h6 class="mb-3 text-sm">Welfare:</h6>

                    <span class="mb-2 text-xs">Welfare:<span class="text-dark font-weight-bold ms-sm-2">
                    </span></span>
                    @{
                        foreach (var item in @Model.Result.Welfare)
                        {
                            <input class="form-control" type="hidden" name="Welfare.CountryId" value="" />
                            <input class="form-control" type="hidden" name="Welfare.JobId" value="" />

                            <span class="mb-2 text-xs">JobName: <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="Welfare.JobName" value="" />
                            </span></span>
                            <span class="mb-2 text-xs">AnnualSavingsRates: <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="Welfare.AnnualSavingsRates" value="" />
                            </span></span>
                            <span class="mb-2 text-xs">RequiredSpecialization: <span class="text-dark font-weight-bold ms-sm-2">
                            <input class="form-control" type="text" name="Welfare.RequiredSpecialization" value="" />
                            </span></span>
                        }
                    }
                  </div>
                  <div class="ms-auto text-end">
                    <button class="btn btn-link text-dark px-3 mb-0" type="submit">
                        <i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>
                        Add
                    </button>
                  </div>
                </li>
              </ul>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
